<% content_for :javascript_includes do %>
    <%= javascript_include_tag 'jquery.raty.js','letsrate.js'%>
<% end %>

<% @vendor_reviews_and_rating = VendorReviewsAndRating.where("vendor_id=?", vendor_id) %>

<div id="review" style="display:block; margin-bottom: 10px;">

  <div style="padding: 10px;">
      <% if @vendor_reviews_and_rating.length == 0 %>
          <p> No Reviews yet. Be first one to add a review </p><br />
      <% else %>
        <% @vendor_reviews_and_rating.each do |vendor_review_rating| %>
          <div style="margin-left: 10%;">
            <p>On <%= vendor_review_rating.created_at.localtime.strftime('%v') %> <%= vendor_review_rating.created_at.localtime.strftime('%r') %></p>
            <p>By : <%= get_user_name vendor_review_rating.user_id %></p>
            <p><%= rating_for_vendor VendorReviewsAndRating, "rating", vendor_review_rating.id, :enable_half => true, :half_show => true %></p>
            <p>Review : <%= vendor_review_rating.review %></p>
            <p></p>
          </div>
          <hr style="width: 80%">
        <% end %>
      <% end %>
  </div>

  <div style="padding-bottom: 10px; margin-left: 10%;">
    <%= link_to 'Add Review And Rating', new_vendor_vendor_reviews_and_rating_path(vendor_id) %>
  </div>

</div>

