<% @vendor_reviews_and_rating.each do |vendor_review_rating| %>
    <p>On <%= vendor_review_rating.created_at.localtime.strftime('%v') %> <%= vendor_review_rating.created_at.localtime.strftime('%r') %></p>
    <p>By : <%= get_user_name vendor_review_rating.user_id %></p>
    <p><%= rating_for_vendor VendorReviewsAndRating, "rating", vendor_review_rating.id, :enable_half => true, :half_show => true %></p>
    <p>Review : <%= vendor_review_rating.review %></p>
    <p></p>
    <hr>
<% end %>

<%= link_to 'Add Review And Rating', new_vendor_vendor_reviews_and_rating_path(@vendor.id) %>