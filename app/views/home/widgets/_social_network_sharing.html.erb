<div class="social-single" style="margin-left:40%;">
  <div id="twitterbutton">
    <script src="http://platform.twitter.com/widgets.js" type="text/javascript"></script>
    <div>
      <a href= "<% @url %>" class="twitter-share-button" data-url="<?php the_permalink() ?>" data-counturl="<?php the_permalink() ?>" data-url="<% @url %>" data-via="<% @user.first_name %>"
         data-related="<% @user.first_name %>">Tweet</a>
    </div>
  </div>

  <div id="fbLikeButton">
    <div class="fb-like" data-share="true" data-width="450" data-show-faces="true"> </div>
  </div>

  <div id="linkedInShare">
    <script type="text/javascript" src="http://platform.linkedin.com/in.js"></script>
    <script type="in/share" data-counter="right"></script>
  </div>

  <div id="plusOneButton">
    <%= google_plus_button href: @url, script: true, annotations: :bubble, size: :medium %>
  </div>
</div>
